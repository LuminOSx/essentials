 
pkgname=orchiis
_pkgname=Orchiis
pkgver=0.1.0
pkgrel=1
pkgdesc="Orchiis Theme for Plasma"
arch=('any')
url="https://github.com/LuminOSx/orchiis"
license=('GPL3')
depends=('plasma-desktop')
optdepends=('qt5-graphicaleffects' 'qt5-svg' 'qt5-quickcontrols2' 'libappindicator-gtk3')
makedepends=('git')
source=("git+${url}.git")
sha256sums=('SKIP')

prepare() {
   cd ${srcdir}/${pkgname}
}

package() {
   mkdir -p ${pkgdir}/usr/share/aurorae/themes/Orchiis
   cp -r  ${srcdir}/${pkgname}/aurorae/* ${pkgdir}/usr/share/aurorae/

   mkdir -p ${pkgdir}/usr/share/color-schemes/
   cp -r ${srcdir}/${pkgname}/color-schemes/* ${pkgdir}/usr/share/color-schemes/

   mkdir -p ${pkgdir}/usr/share/plasma/desktoptheme/${_pkgname}
   cp -r ${srcdir}/${pkgname}/plasma/desktoptheme/* ${pkgdir}/usr/share/plasma/desktoptheme/

   mkdir -p ${pkgdir}/usr/share/plasma/look-and-feel/${_pkgname}
   cp -r ${srcdir}/${pkgname}/plasma/look-and-feel/* ${pkgdir}/usr/share/plasma/look-and-feel/

   mkdir -p ${pkgdir}/usr/share/sddm/themes/${_pkgname}
   cp -r ${srcdir}/${pkgname}/sddm/themes/* ${pkgdir}/usr/share/sddm/themes/
}
