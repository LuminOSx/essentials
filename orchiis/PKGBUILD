 
pkgname=orchiis
pkgver=0.1.0
pkgrel=1
pkgdesc="Orchiis Theme for Plasma"
arch=('any')
url="https://github.com/LuminOSx/orchiis"
license=('GPL3')
depends=('plasma-desktop')
optdepends=('qt5-graphicaleffects' 'qt5-svg' 'qt5-quickcontrols2' 'libappindicator-gtk3')
makedepends=('git')
source=("git+${url}.git")
sha256sums=('SKIP')

prepare() {
   cd ${srcdir}/${pkgname}
}

package() {
   mkdir -p ${pkgdir}/usr/share/aurorae/themes/Orchiis
   cp -r  ${srcdir}/${pkgname}/aurorae/* ${pkgdir}/usr/share/aurorae/themes

   mkdir -p ${pkgdir}/usr/share/color-schemes
   cp -r ${srcdir}/${pkgname}/color-schemes ${pkgdir}/usr/share

   mkdir -p ${pkgdir}/usr/share/plasma/desktoptheme/Orchiis
   cp -r ${srcdir}/${pkgname}/plasma/desktoptheme ${pkgdir}/usr/share/plasma

   mkdir -p ${pkgdir}/usr/share/plasma/look-and-feel/Orchiis
   cp -r ${srcdir}/${pkgname}/plasma/look-and-feel/ ${pkgdir}/usr/share/plasma

   mkdir -p ${pkgdir}/usr/share/sddm/themes/Orchiis
   cp -r ${srcdir}/${pkgname}/sddm/themes ${pkgdir}/usr/share/sddm/themes
}
